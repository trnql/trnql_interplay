<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                    android:color="#4650B4" />
            <stroke
                    android:width="1dp"
                    android:color="#4650B4" />
            <corners
                    android:radius="6dp" />

        </shape>
    </item>

    <item>
        <shape>
            <gradient
                    android:startColor="#8CBEDC"
                    android:endColor="#64A0B4"
                    android:angle="270" />
            <stroke
                    android:width="1dp"
                    android:color="#4650B4" />
            <corners
                    android:radius="6dp" />
        </shape>
    </item>

</selector>